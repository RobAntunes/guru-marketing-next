		// Agent Card Stagger Animation (Hero)
		const timeline = gsap.timeline({ repeat: -1, repeatDelay: 3 });
		const cards = document.querySelectorAll(".agent-row");

		cards.forEach((card, i) => {
			timeline.to(
				card,
				{
					opacity: 1,
					y: 0,
					duration: 0.4,
					ease: "power2.out",
				},
				i * 1.5,
			); // Stagger start times
		});

		// Reset animation for loop
		timeline.to(cards, {
			opacity: 0,
			y: 10,
			duration: 0.5,
			delay: 3,
		});

		// Newsletter Form Handler
		const form = document.getElementById("newsletter-form");
		const submitBtn = document.getElementById("newsletter-submit");
		const messageDiv = document.getElementById("newsletter-message");

		form?.addEventListener("submit", async (e) => {
			e.preventDefault();

			const formData = new FormData(form);
			const originalText = submitBtn.textContent;

			// Update button state
			submitBtn.textContent = "Processing...";
			submitBtn.disabled = true;
			messageDiv.classList.add("hidden");

			try {
				const response = await fetch("/api/subscribe", {
					method: "POST",
					body: formData,
				});

				const result = await response.json();

				if (result.success) {
					messageDiv.textContent = "✓ " + result.message;
					messageDiv.classList.remove("hidden", "text-guru-alert");
					messageDiv.classList.add("text-guru-accent");
					form.reset();
				} else {
					messageDiv.textContent = "✗ " + result.message;
					messageDiv.classList.remove("hidden", "text-guru-accent");
					messageDiv.classList.add("text-guru-alert");
				}
			} catch (error) {
				messageDiv.textContent = "✗ Network error. Please try again.";
				messageDiv.classList.remove("hidden", "text-guru-accent");
				messageDiv.classList.add("text-guru-alert");
			} finally {
				submitBtn.textContent = originalText;
				submitBtn.disabled = false;
			}
		});
